<!DOCTYPE html>
<html ng-app="Medicinia" ng-cloak>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title><%= t('app.title') %></title>
    
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag '/vendor/angular/angular-csp.css' %>
    <%= stylesheet_link_tag '/vendor/bootstrap/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag '/vendor/font-awesome/css/font-awesome.min.css' %>
    <%= stylesheet_link_tag 'application' %>
  </head>
  <body ng-controller="AppController">
    <header class="header">
      <nav class="header-content navbar navbar-default navbar-static-top">
        <div class="container-fluid">
          <%= link_to 'Medicinia', root_path, class: 'header-logo navbar-brand' %>
          <div class="navbar-header">
            <button type="button" class="header-toggle navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="header-menu collapse navbar-collapse" id="collapse">
            <ul class="header-menu-list nav navbar-nav navbar-right">
              <% if @current_user %>
                <li><%= link_to t('link.signout'), sessions_signout_path, title: t('link.signout') %></li>
              <% else %>
                <li><%= link_to t('link.signin'), sessions_signin_path, title: t('link.signin') %></li>
                <li><%= link_to t('link.signup'), sessions_signup_path, title: t('link.signup') %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="wrapper">
      <div class="container-fluid">
        <div class="row">
          <% if @current_user %>
            <div class="col-xs-12 col-md-1">
              <aside class="sidebar">
                <nav class="sidebar-menu">
                  <ul class="sidebar-menu-list clearfix">
                    <li class="sidebar-menu-list-item">
                      <%= link_to patients_path, class: @sidebar == :patients ? 'active' : '' do %>
                        <i class="icon icon-patients"></i>
                        Pacientes
                      <% end %>
                    </li>
                    <li class="sidebar-menu-list-item">
                      <%= link_to notifications_path, class: @sidebar == :notifications ? 'active' : '' do %>
                        <i class="icon icon-notifications"></i>
                        Notificações
                      <% end %>
                    </li>
                    <li class="sidebar-menu-list-item">
                      <%= link_to messages_path, class: @sidebar == :messages ? 'active' : '' do %>
                        <i class="icon icon-messages"></i>
                        Conversas
                      <% end %>
                    </li>
                    <li class="sidebar-menu-list-item">
                      <%= link_to tasks_path, class: @sidebar == :tasks ? 'active' : '' do %>
                        <i class="icon icon-tasks"></i>
                        Tarefas
                      <% end %>
                    </li>
                  </ul>
                </nav>
              </aside>
            </div>
          <% end %>
          <div class="col-xs-12 <%= @current_user ? 'col-md-11' : '' %>">
            <div class="content">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <% if Rails.env.development? %>
      <%= javascript_include_tag 'http://localhost:35729/livereload.js' %>
    <% end %>

    <% if @current_user %>
      <script>
        var USER_ID = "<%= @current_user.id %>";
        var PUSHER_KEY = "<%= ENV['PUSHER_KEY']%>";
      </script>
    <% end %>
    
    <%= javascript_include_tag '/vendor/jquery/dist/jquery.min.js' %>
    <%= javascript_include_tag '/vendor/angular/angular.min.js' %>
    <%= javascript_include_tag '/vendor/bootstrap/dist/js/bootstrap.min.js' %>
    <%= javascript_include_tag '/vendor/pusher-websocket-iso/dist/web/pusher.js' %>
    <%= javascript_include_tag '/vendor/pusher-angular/lib/pusher-angular.min.js' %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
